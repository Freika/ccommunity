<div class="beauty padding clearfix">
<h2>Профиль пользователя</h2>

<h3><%= gravatar_for(@user) %> <%= @user.username %></h3>
<%= link_to 'Оповещения', user_announcements_path(@user.id) %>
<hr>
<div class="col-lg-6">
  <h4>Список постов:</h4><br>
  <table class="table">
  <% @user.posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td width=20%><%= link_to post.category.title, post.category %></td>
    <td width=20%><%= created_date(post) %></td>
  </tr>
  <% end %>
  </table>
</div>
<div class="col-lg-6">
  <% if @user.github %>
    <p><i class="fa fa-github-alt black"></i> <%= link_to @user.github, "https://github.com/#{@user.github}", target: "_blank" %></p>

  <% end %>
  <% if @user.twitter  %>
    <p><i class="fa fa-twitter black"></i> <%= link_to @user.twitter, "https://twitter.com/#{@user.twitter}", target: "_blank" %></p>
  <% end %>
  <% if @user.site %>
    <p><i class="fa fa-anchor black"></i> <%= link_to @user.site, "http://#{@user.site}", target: "_blank" %></p>
  <% end %>
</div>
<hr>
</ul>
</div>
