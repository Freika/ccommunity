<% if @link.approved? || user_signed_in? %>
<div class="beauty post links">
  <p>Заголовок:</p>
  <%= @link.title %>
  <p>Описание:</p>
  <%= @link.description %>
  <p>Ссылка:</p>
  <a href="<%= @link.address %>"><%= @link.address %></a>
  <p>Категория:</p>
  <%= link_to @link.category.title, @link.category %>
  <p>Автор:</p>
  <% if @link.user %>
  <%= link_to @link.user.username, @link.user %>
  <% else %>
  Гость
  <% end %>


    <% if user_signed_in? && current_user?(@link.user) %>     
      <%= render 'moderate_links' %>
    <% elsif user_signed_in? && !@link.user %>     
      <%= render 'moderate_links' %>
    <% end %>
</div>
<%= render partial: 'shared/comments' %>

<% else %>

<p>Ссылка на модерации.</p>
 
<% end %>
