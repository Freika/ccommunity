<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label "Название записи" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Текст в url записи" %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label "Содержимое записи" %><br>
    <%= f.text_area :content, cols: 120, rows: 25 %>
  </div>
  <div class="field">
    <%= f.label "Выберите категорию" %>
    <%= f.select :category_id, @post_category %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>
        tinymce.init({selector:'textarea'});
</script>
