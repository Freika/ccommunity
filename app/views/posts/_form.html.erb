<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label "Название записи" %><br>
    <%= f.text_field :title, cols: 150 %>
  </div>
  <div class="field">
    <%= f.label "Текст в url записи" %><br>
    <%= f.text_field :url, cols: 150 %>
  </div>
  <div class="field">
    <%= f.label "Содержимое записи" %><br>
    <%= f.text_area :content, cols: 150, rows: 25 %>
  </div>
  <div class="field">
    <%= f.label "Выберите категорию" %>
    <%= f.select :category_id, @post_category %>
  </div>
  <div class="field">
    <%= f.label :members_only, "Доступно только зарегистрированным" %>
    <%= f.check_box :members_only %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
