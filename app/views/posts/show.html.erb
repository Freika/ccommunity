<% provide(:title, @post.title) %>
<p id="notice"><%= notice %></p>

<p>
  <h1><%= @post.title %></h1>
</p>
<p class="lead">Автор: <%= @post.user.username %></p>
<p><span class="glyphicon glyphicon-time"></span> Опубликовано: <%= created_date(@post) %></p>
<hr>

<div class="post-content single">
  <%= @post.content.html_safe %>
</div>

<%= @post.category.title || "Категория не выбрана" %>

<% if current_user?(@post.user) %>
<hr>
  <%= link_to 'Править', edit_post_path(@post) %> |
  <%= link_to 'Удалить', @post, method: :delete, data: { confirm: 'Уверены?' } %>  
<% end %>


<hr>
<%= render 'shared/comment_form' %>
<hr>

<%= render 'shared/comment_list' %>